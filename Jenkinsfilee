node{
   stage('SCM Checkout'){
     git 'https://github.com/javahometech/my-app'
   }
   stage('Compile-Package'){
      def mvnHome = tool name: 'maven-6', type: 'maven'
      sh "${mvnHome}/bin/mvn package"
   }
   stage('Email Notification'){
      mail bcc: '', body: '''hi,
      this is test''', cc: '', from: '', replyTo: '', subject: 'jenkins job', to: 'naveelhashmi123@gmail.com'
   }
  stage('Slack Notification'){
      slackSend channel: '#jenkins-integration', color: 'good', iconEmoji: '', message: 'Welcome to jenkins ,slackkkkkkkkkkkkkkk', token: 'https://hooks.slack.com/services', tokenCredentialId: 'jenkins-demo', username: ''}
}
